{
  "env": {
    "browser": true,
    "es6": true,
    "meteor": true
  },
  "plugins": [ "meteor" ],
  "globals": {
  },
  "extends": "airbnb/base",
  "parserOptions": { "sourceType": "module" },
  "rules": {
    "no-use-before-define": [ 0, { "functions": false } ],
    "array-bracket-spacing": [ 2, "always" ],
    "no-unused-vars": 1,
    "max-len": [ 1, 120 ],
    "brace-style": [ 2, "stroustrup", { "allowSingleLine": true } ]
  }
}
